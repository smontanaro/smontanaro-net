<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
        <meta name="description" content="" />
        <meta name="author" content="" />
        {% block meta %}
        {% endblock %}
        {% block head %}
            <title>{{ page_title|d(title)|safe }}</title>
        {% endblock %}
        <link href="/static/images/favicon.ico" rel="icon" type="image/x-icon" />
        <link href="/static/css/simple.css" rel="stylesheet" />
        <link href="/static/js/popper.js" />
        <link href="/static/css/bootstrap-5.1.3.css" rel="stylesheet" />
    </head>
    <body>
        <div class="d-flex" id="wrapper">
            <!-- Sidebar -->
            <div class="border-end bg-white" id="sidebar-wrapper">
                <div class="list-group list-group-flush">
                    {% block left %}
                        <a class="list-group-item list-group-item-action list-group-item-light p-3" href="/CR">Old CR Archives</a>
                        <a class="list-group-item list-group-item-action list-group-item-light p-3" href="/static/python/index.html">Python Bits</a>
                    {% endblock %}
                </div>
            </div>
            <!-- Page content wrapper -->
            <div id="page-content-wrapper">
                <!-- Top navigation -->
                <nav class="navbar navbar-expand-lg navbar-light bg-light border-bottom">
                    <div class="container-fluid">
                        <button class="btn" id="sidebarToggle"><span class="navbar-toggler-icon"></span></button>
                    </div>
                </nav>
                <!-- Page content -->
                <div class="container-fluid">
                    <h1 class="mt-4">{{ prev }}{{ title }}{{ next }}</h1>
                    {% block topic %}{% endblock %}
                    {% block content %}
                        {{ body|safe }}
                    {% endblock %}
                    </p>
                </div>
            </div>
        </div>
        <!-- Bootstrap core JS -->
        <script src="/static/js/bootstrap-5.1.3.js"></script>
        <!-- Core theme JS -->
        <script src="/static/js/scripts.js"></script>
    </body>
</html>
