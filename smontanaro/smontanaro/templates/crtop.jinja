{% extends "bootstrap.jinja" %}

{% block left %}
    {{ super() }}
    {% for (text, href) in [("Home", "/"), ("Topics", "/CR/topics"),
        ("About", "/CR/about"), ("Help", "/CR/help"),] %}
        <a class="list-group-item list-group-item-action list-group-item-light p-3" href="{{ href }}">{{ text }}</a>
    {% endfor %}
    <hr style="height: 4px" />
    <span class="d-inline-block" tabindex="0" data-toggle="tooltip"
          title="Enter a pattern and indicate whether to keep or toss subjects or emails with that pattern.">
        <b>Filter</b>
    </span>
    {% include "filter.jinja" %}
{% endblock %}
